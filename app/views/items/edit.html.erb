<h1>Editing item</h1>

<% form_for [@inbox, @item] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', inbox_item_path(@inbox,@item) %> |
<%= link_to 'Back', inbox_items_path(@inbox) %>