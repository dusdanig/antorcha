
<% semantic_form_for @step.new_record? ? [@definition, @step] : [@step] do |f| %>
  <%= f.inputs :title, :start, :destination_url %>
  
  <% f.inputs "Condities" do %>
    <%= f.input :causes, :as => :check_boxes, :label_method => :title, :collection => @steps %>
  <% end %>
  
  <% f.inputs "Versturing" do %>
    <%= f.input :roles, :as => :check_boxes, :collection => @definition.roles %>
  <% end %>
  
  <% f.buttons do %>
    <%= f.commit_button %> of <%= link_to 'ga terug naar de transactiedefinitie', @definition %>
  <% end %> 
<% end %>


