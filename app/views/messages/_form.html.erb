<% semantic_form_for(@message) do |f| %>

  <% f.inputs do %>
    <%= f.input :step, :as => :radio, :collection => @steps_to_start_with, :label_method => :title %>
    <%= f.input :title %>
    <%= f.input :body %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button %> or <%= link_to "go back to messages", messages_path %>
  <% end %>

<% end %>