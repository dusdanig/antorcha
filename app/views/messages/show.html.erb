<h1>Message</h1>
<h2><%=h @message.title  %></h2>
<p><b>Instruction</b> <%= link_to h(@message.instruction.title), @message.instruction %></p>
<p>Message is
  <% if @message.incoming? %>
    received at <%=h l(@message.created_at, :format => :short) %>.
  <% else %>
    <% if @message.sent? %>
      sent at <%=h l(@message.sent_at, :format => :short) %>
      <% if @message.delivered? %>
        and received at <%=h l(@message.delivered_at, :format => :short) %>.
      <% else %>
        and not received.
      <% end %>
    <% else %>
      is a concept and not yet sent.
    <% end %>
  <% end %>
</p>

<p>
  <b>Body:</b>
  <%=h @message.body %>
</p>

<p>
  <b>Incoming?:</b>
  <%=h @message.incoming? %>
</p>

<p>
<% unless @message.sent? %>
  <%= button_to 'Send', message_delivery_path(@message), :method => :post %> |
<% end %>
<%= link_to 'Edit', edit_message_path(@message) %> |
<%= link_to 'Back', messages_path %>
</p>