<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title> <%= t "activerecord.models.#{controller.controller_name.singularize}.other" %> - <%= t controller.action_name %></title>
  <%= stylesheet_link_tag 'formtastic', 'formtastic_changes', 'application' %>
</head>
<body class="<%= controller.controller_name %>">
	
		<div>
				<%= debug current_user %>
		</div>
	
  <div id="page_container">
 	 <div id="header">
			<div id="logo">
				<a href="/"><img src="/images/header_logo.png" alt="Antorcha"></a>
			</div>
		</div>
	
		<% flash.each do |name, message| %>
			<%= content_tag :div, message, :class => "flash #{name}" %>
		<% end %>
		
	
	
	
		<div id="navigation">
			
			<div id="authentication">
				<% if user_signed_in? %>
					<%= link_to "Sign out", destroy_user_session_path %>
				<% else %>
					<%= link_to 'Sign in', new_user_session_path %>
				<% end %>
			</div>
			
			<ul class="menu" id="tabs">
	      <% [
	        link_to_messages, link_to_definitions,
	        link_to_workers, link_to_organizations, link_to("Nieuwe transactie", new_transaction_initiation_path, :class=>"transaction_initiation")
	      ].compact.each do |link|
			  %>
					<li>
						<%= link %>
					</li>
				<% end %>
	   	</ul>
		</div>
 		
	  <div id="page">
			<div id="breadcrumb"><%= yield(:breadcrumb) %>
			</div>
		  <div id="main">
				<%= yield %>
			</div>
			<div id="sidebar">
				
	
				<div class="devnav">
      		<% if false %>
					<div id="user">
			       <p>communicator
					      <% %w[maintainer communicator advisor].each do |user_session| %>
					        <% if current_user.roles.include? user_session.to_sym %>
					          <%= button_to "Give up #{user_session} type", user_session_path(:id => user_session), :method => :delete %>
					        <% else %>          
					          <%= button_to "Act as #{user_session} type", user_session_path(:id => user_session), :method => :put %>
					        <% end %>
					      <% end %>
					    </p>
			    </div>
					<% end %>
				  <p>
					<%= debug session.inspect %>
					</p>
					<% if current_user.roles.include? "maintainer".to_sym %>
						<ul class="menu">
				      <% [
				        link_to_transactions, link_to_messages,
				        link_to_definitions, link_to_steps,
				        link_to_workers, link_to_reactions, link_to("Nieuwe transactie", new_transaction_initiation_path, :class=>"transaction_initiation")
				      ].compact.each do |link|
						  %>
								<li>
									<%= link %>
								</li>
							<% end %>
				   	</ul>
					<% end %>
				</div>
		 		<%= yield(:sidebar) %>
			</div>
	  </div>
	</div>
</body>
</html>
