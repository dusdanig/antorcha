<% breadcrumb User %>

<h1>Gebruikers activeren</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <p><strong><%= user.username %></strong> - <%= link_to h(user.email), "mailto:#{user.email}" %></p>
      <%= button_to "Activeer deze gebruiker", user_path(user), :method => :put %>
    </li>
  <% end %>
</ul>