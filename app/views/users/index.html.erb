<% breadcrumb User %>

<h1>Gebruikers</h1>

<table id="users" class="users" border="1">
  
  <thead>
    <th>Gebruiker</th>
    <% @roles.each do |role| %>
    <th><%= role.title %></th>
    <% end %>
  </thead>
  
  <% @users.each do |user| %>
  <tr class="user_<%= user.id %>">
    <td><strong><%= user.username %></strong> - <%= link_to h(user.email), "mailto:#{user.email}" %></td>
    
    <% if user.activated? %>
      <% form_tag user, :method => :put do %> 
        <% @roles.each do |role| %>
          <td><%= check_box_tag "user_#{user.id}_role_#{role.id}", role.id, checked = (user.role_ids.include? role.id), {:name => "roles[]", :class => "user_role"} %></td>
        <% end %>
          <td><%= submit_tag "Wijzig", :class => "submit" %></td>
      <% end %>    
    <% else %>
      <td>
      <%= link_to "Activeer", user_path(user), :method => :put  %>
      </td>    
    <% end %>
    
    <td><%= link_to "Verwijder", user_path(user), :method => :delete, :confirm => "Weet u het zeker?" %></td>
  </tr>
  <% end %>
</table>