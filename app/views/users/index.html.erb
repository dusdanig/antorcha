<% breadcrumb User %>

<h1>Gebruikers activeren</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <span><strong><%= user.username %></strong> - <%= link_to h(user.email), "mailto:#{user.email}" %>
      (<%= link_to "Activeer", user_path(user), :method => :put %> |
      <%= link_to "Verwijder", user_path(user), :method => :delete, :confirm => "Weet u het zeker?" %>)</span>
    </li>
  <% end %>
</ul>