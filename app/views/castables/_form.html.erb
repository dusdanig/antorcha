<% semantic_form_for(@castable) do |f| %>
  <%= f.error_messages %>

  <% f.inputs do %>
    <%= f.input :user, :collection => @users, :label => "Gebruiker" %>
    <%= f.input :role_id, :collection => @roles, :label => "Rol" %>
  <% end %>

  <% f.buttons do %>
    <%= f.commit_button 'Rol toewijzen'%>
    of <%= link_to "ga terug", castables_path %>
  <% end %>
<% end %>
