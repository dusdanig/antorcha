<h1>New Instruction</h1>
<p class="intro">Procedure: <%= link_to h(@procedure.title), @procedure %> </p>

<% semantic_form_for @instruction.new_record? ? [@procedure, @instruction] : @instruction do |f| %>
  <%= f.inputs :title, :start %>
  <% f.buttons do %>
    <%= f.commit_button %> or <%= link_to 'go back to instructions', procedure_instructions_path(@procedure) %>
  <% end %> 
<% end %>


<p></p>