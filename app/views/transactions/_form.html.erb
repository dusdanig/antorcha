
<% semantic_form_for(@transaction) do |f| %>

  <% f.inputs do %>
    <%= f.input :title %>
    <%= f.input :definition_id, :as => :radio, :label_method => :title, :collection => @definitions %>
  <% end %>

  <% f.buttons do %>
    <%= f.commit_button %> or <%= link_to "go back to transactions", transactions_path %>
  <% end %>
<% end %>
