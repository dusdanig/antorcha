
<% semantic_form_for(@task) do |f| %>

  <% f.inputs do %>
    <%= f.input :title %>
    <%= f.input :procedure, :as => :radio, :label_method => :title, :collection => @procedures %>
  <% end %>

  <% f.buttons do %>
    <%= f.commit_button %> or <%= link_to "go back to tasks", tasks_path %>
  <% end %>
<% end %>
